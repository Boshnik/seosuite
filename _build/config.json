{
    "name": "SEO Suite",
    "lowCaseName": "seosuite",
    "description": "Fix 404 pages on your site.",
    "author": "Sterc",
    "version": "1.2.0",
    "package":{
        "menus": [{
            "text": "seosuite.menu.seosuite",
            "description": "seosuite.menu.seosuite_desc",
            "action": "home"
        }],
        "elements": {
            "plugins": [{
                "name": "SEO Suite",
                "description": "Plugin to handle the SEO Suite redirects.",
                "file": "seosuite.plugin.php",
                "events": [
                    "OnDocFormPrerender",
                    "OnDocFormRender",
                    "OnDocFormSave",
                    "onEmptyTrash",
                    "OnLoadWebDocument",
                    "OnMODXInit",
                    "OnPageNotFound",
                    "OnResourceDuplicate"
                ]
            }],
            "snippets": [{
                "name": "SeoSuiteMeta",
                "description": "Snippet for adding the title and meta description in your website.",
                "file": "seosuitemeta.snippet.php"
            }],
            "chunks": [{
                "name": "tplMetaTitle",
                "file": "metatitle.chunk.tpl",
                "description": "The default chunk used for the title."
            }, {
                "name": "tplMeta",
                "file": "meta.chunk.tpl",
                "description": "The default chunk used for the meta."
            }],
            "widgets": [{
                "name": "seosuite",
                "description": "SEO Suite dashboard widget",
                "type": "file",
                "content": "seosuite.widget.php",
                "lexicon": "seosuite:default",
                "size": "half"
            }]
        },
        "systemSettings": [{
            "key": "exclude_words",
            "value": "",
            "area": "general"
        },{
          "key": "meta.counter_fields",
          "value": "longtitle:30|70,description:70|155,content",
          "area": "meta"
        },{
          "key": "meta.disabled_templates",
          "value": "",
          "area": "meta"
        },{
          "key": "meta.max_keywords_title",
          "value": "4",
          "area": "meta"
        },{
          "key": "meta.max_keywords_description",
          "value": "8",
          "area": "meta"
        },{
          "key": "meta.searchengine",
          "value": "google",
          "area": "meta"
        }, {
          "key": "meta.default_meta_title",
          "value": "[{\"type\":\"placeholder\",\"value\":\"title\"},{\"type\":\"text\",\"value\":\" | \"},{\"type\":\"placeholder\",\"value\":\"site_name\"}]",
          "area": "meta"
        }, {
          "key": "meta.default_meta_description",
          "value": "[{\"type\":\"placeholder\",\"value\":\"description\"}]",
          "area": "meta"
        }]
    },
    "database": {
        "tables": ["SeoSuiteUrl"]
    },
    "build": {
        "readme": "docs/readme.txt",
        "license": "docs/license.txt",
        "changelog": "docs/changelog.txt",
        "resolver": {
            "after": [
                "resolve.tables.php",
                "permissions.resolver.php"
            ]
        }
    }
}
