{
    "name": "SEO Suite",
    "lowCaseName": "seosuite",
    "description": "Fix 404 pages on your site.",
    "author": "Sterc",
    "version": "1.2.0",
    "package":{
        "menus": [{
            "text": "seosuite.menu.seosuite",
            "description": "seosuite.menu.seosuite_desc",
            "action": "home"
        }],
        "elements": {
            "plugins": [{
                "name": "SEO Suite",
                "description": "Plugin to handle the SEO Suite redirects.",
                "file": "seosuite.plugin.php",
                "events": [
                    "OnDocFormRender",
                    "OnDocFormSave",
                    "OnLoadWebDocument",
                    "OnMODXInit",
                    "OnPageNotFound",
                    "OnResourceDuplicate"
                ]
            }],
            "snippets": [],
            "chunks": [],
            "widgets": [{
                "name": "seosuite",
                "description": "SEO Suite dashboard widget",
                "type": "file",
                "content": "seosuite.widget.php",
                "lexicon": "seosuite:default",
                "size": "half"
            }]
        },
        "systemSettings": [{
            "key": "exclude_words",
            "value": "",
            "area": "general"
        },{
          "key": "keywords.fields",
          "value": "pagetitle:70,longtitle:70,description:160,alias:2023,menutitle:2023",
          "area": "keywords"
        },{
          "key": "keywords.disabledtemplates",
          "value": "",
          "area": "keywords"
        },{
          "key": "keywords.max_keywords_title",
          "value": "4",
          "area": "keywords"
        },{
          "key": "keywords.max_keywords_description",
          "value": "8",
          "area": "keywords"
        },{
          "key": "preview.delimiter",
          "value": "|",
          "area": "preview"
        },{
          "key": "preview.title_format",
          "area": "preview"
        },{
          "key": "preview.usesitename",
          "type": "combo-boolean",
          "value": "1",
          "area": "preview"
        },{
          "key": "preview.searchengine",
          "value": "google",
          "area": "preview"
        }, {
          "key": "preview.default.meta_title",
          "value": "[{\"type\":\"placeholder\",\"value\":\"longtitle\"},{\"type\":\"text\",\"value\":\" | \"},{\"type\":\"placeholder\",\"value\":\"site_name\"}]",
          "area": "preview"
        }, {
          "key": "preview.default.meta_description",
          "value": "google",
          "area": "preview"
        }]
    },
    "database": {
        "tables": ["SeoSuiteUrl"]
    },
    "build": {
        "readme": "docs/readme.txt",
        "license": "docs/license.txt",
        "changelog": "docs/changelog.txt",
        "resolver": {
            "after": [
                "resolve.tables.php"
            ]
        }
    }
}
